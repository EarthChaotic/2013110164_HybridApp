<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TNI2013110164.EventPage2"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout BackgroundColor="Beige">
        <Frame
            Margin="20"
            BackgroundColor="MediumSeaGreen"
            CornerRadius="20">
            <StackLayout>
                <Image Margin="20" Source="Rag" />
                <Entry
                    x:Name="Username"
                    Margin="5"
                    Keyboard="Default"
                    Placeholder="Username" />
                <Entry
                    x:Name="Password"
                    Margin="5"
                    Keyboard="Default"
                    Placeholder="Password" />
                <Button
                    Margin="5"
                    BackgroundColor="Beige"
                    Text="Submit" />
            </StackLayout>
        </Frame>

    </StackLayout>
</ContentPage>